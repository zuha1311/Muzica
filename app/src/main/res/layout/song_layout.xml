<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/songs_layout"
    android:background="@drawable/songs_layout_border">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:background="@drawable/default_album_art"
        android:padding="5dp"></ImageView>

    <TextView
        android:id="@+id/songText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/music_img"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/habibi"
        android:gravity="center_vertical"
        android:textColor="#F10303"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/menuMore"
        android:singleLine="true"
        android:layout_marginEnd="27dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/favItem"
        android:background="@drawable/ic_baseline_favorite_border_24"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/menuMore"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/menuMore"
        android:background="@drawable/ic_baseline_more_vert_24"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:padding="10dp"></ImageView>



</RelativeLayout>