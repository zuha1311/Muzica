<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spotified.Activities.About"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#8A0505"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:fadingEdge="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:id="@+id/imageAbout"
            android:src="@drawable/app_about"
            android:outlineSpotShadowColor="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0 : Created with Passion"
            android:textColor="#100E0E"
            android:layout_below="@+id/imageAbout"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>